<section class="hero py-16">
  <div class="container mx-auto flex items-center justify-between">
    <div class="w-1/2">
      <h6 class="text-lg"><em>Need Some Energy?</em></h6>
      <h1 class="text-5xl font-bold">Start your day with Coffee</h1>
      <button
        class="px-6 py-2 rounded-full text-white font-bold mt-4 btn-primary">
        Order Now
      </button>
    </div>
    <div class="w-1/2 coffee-hero-img">
      <img src="/img/coffee-hero.jpg" alt="" />
    </div>
  </div>
</section>
<section id="menu" class="menu container mx-auto py-8">
  <h1 class="text-xl font-bold mb-8"></h1>
  <div class="grid grid-cols-3 col-gap-12 row-gap-16">
    <% coffees.forEach(function(coffee){%>
      <div class="w-72">
        <img class="h-40 mb-4 mx-auto" src="/img/<%= coffee.image%>" alt="" />
        <div class="text-center">
          <h2 class="mb-4 text-3xl"><%= coffee.name%></h2>
          <div class="flex items-center justify-around mt-6">
            <span class="font-bold text-lg">US $ <%= coffee.price%></span>
            <button data-coffee="<%= JSON.stringify(coffee)%>"
              class="add-to-cart py-1 px-6 rounded-full flex items-center font-bold"
            >
              <span>+</span>
              <span class="ml-4">Add</span>
            </button>
          </div>
        </div>
      </div> 
    <%})%>
  </div>
</section>
